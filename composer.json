{
    "name": "comphppuebla/slim-modules",
    "description": "Organize your Slim applications in a modular structure",
    "license": "MIT",
    "keywords": ["slim", "modules"],
    "authors": [
        {
            "name": "Luis Montealegre",
            "email": "montealegreluis@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5",
        "slim/slim": "~2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "autoload": {
        "psr-4": {"ComPHPPuebla\\Slim\\": "src"}
    },
    "autoload-dev": {
        "psr-4": {"ComPHPPuebla\\Slim\\": "tests"}
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    }
}
